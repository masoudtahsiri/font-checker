{
  "manifest_version": 3,
  "name": "PeekFont",
  "version": "1.0.2",
  "description": "PeekFont: Live font inspector! Hover to identify fonts & text styles. Instantly copy element details & key font CSS. Keeps pages fully interactive. Your essential web typography tool.",
  "minimum_chrome_version": "88",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "PeekFont - Font Inspector"
  },
  "background": {
    "service_worker": "js/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content.js"],
      "css": ["css/content.css"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["css/*", "js/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "homepage_url": "https://refact.co",
  "author": "Refact"
} 